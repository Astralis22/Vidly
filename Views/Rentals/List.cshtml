@model  IEnumerable<Vidly.Models.Rental>

@{
    ViewBag.Title = "Current Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Current Rentals</h2>

@if (!Model.Any())
{
    <p>We don't have any active rentals yet.</p>
}
else
{
    <table id="rentals" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Movie</th>
                <th>Rental date</th>
                <th>Return</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rental in Model)
            {
                <tr>
                    <td>@rental.Customer.Name</td>
                    <td>@rental.Movie.Name</td>
                    <td>@rental.DateRented</td>
                    <td>@Html.ActionLink("End rental", "EndRental", "Rentals", new { id = rental.Id }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        </tbody>
    </table>
}
@section scripts
{
    <script>

        $(document).ready(function () {
            $("#rentals").show();
            $("#rentals").DataTable();
        });

    </script>
}



